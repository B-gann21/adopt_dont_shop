<h1>New Application</h1>

<%= form_with url: "/applications", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :address %>
  <%= form.text_field :address %>
  <%= form.label :description %>
  <%= form.text_field :description %>
  <%= form.submit "Submit" %>
<% end %>
