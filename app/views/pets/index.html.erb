<h1>All pets</h1>

<%= form_with url: "/pets", method: :get, local: true, class: "new-form" do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %><br>

<%= link_to "Start an Application", "/applications/new" %><br><br>
<% @pets.each do |pet| %>
  <div class="show">
    <h3><%= pet.name %></h3>
    <p>Age: <%= pet.age %></p>
    <p>Breed: <%= pet.breed %></p>
    <p>Adoptable: <%= pet.adobtable %> </p>
    <p>You can find <%= pet.name %> at <%= pet.shelter_name %>!</p>
    <%= link_to "Edit #{pet.name}", "/pets/#{pet.id}/edit" %>
    <%= link_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %>
  </div><br>
<% end %>
