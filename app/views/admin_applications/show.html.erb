<h1>Application <%= @application.id %> </h1>
<h2>Name: <%= @application.name %></h2>
<p>
  Address: <%= @application.street_address %>,
           <%= @application.city %>,
           <%= @application.state %>,
           <%= @application.zip_code %>
</p>
<p>Description: <%= @application.description %> </p>
<p>Status: <%= @application.status %></p>

<h2>Desired Pets:</h2>
<% @application.application_pets.each do |application_pet| %>
  <div id="pet-<%= application_pet.pet.id %>">
    <h2><%= application_pet.pet.name %>
      <% if application_pet.approval_status == "approved"%>
        <p>Status: Approved</p>
      <% elsif application_pet.approval_status == "rejected"%>
        <p>Status: Rejected</p>
      <% else %>
        <p>Status: Pending Approval</p>
        <p><%= button_to "Approve Pet", "/admin/applications/#{@application.id}?status=approved&pet_id=#{application_pet.pet.id}", method: :patch %><p>
        <p><%= button_to "Reject Pet", "/admin/applications/#{@application.id}?status=rejected&pet_id=#{application_pet.pet.id}", method: :patch %><p>
      <% end %>
    </h2>
    <p>Age: <%= application_pet.pet.age %></p>
    <p>Breed: <%= application_pet.pet.breed %></p>
  </div>
<% end %>
